{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],

    "headers": [{
      "source": "**/*",
      "headers": [ {
        "key": "Content-Security-Policy",
        "value": "script-src 'none'; object-src 'none'; base-uri 'none'; report-uri https://csp.withgoogle.com/csp/chromium-website/"
      }]
    }]
  }
}
